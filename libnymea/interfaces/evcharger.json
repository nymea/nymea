{
    "description": "An electric vehicle charger. Extends the power interface to report plug/charge state and session energy, and to optionally control charging current and phase count in addition to on/off power control.",
    "extends": ["power"],
    "states": [
        {
            "name": "maxChargingCurrent",
            "type": "double",
            "writable": true,
            "unit": "Ampere",
            "minValue": "any",
            "maxValue": "any"
        },
        {
            "name": "pluggedIn",
            "type": "bool",
            "optional": true
        },
        {
            "name": "charging",
            "type": "bool",
            "logged": true,
            "optional": true
        },
        {
            "name": "phaseCount",
            "type": "uint",
            "minValue": 1,
            "maxValue": 3,
            "optional": true
        },
        {
            "name": "desiredPhaseCount",
            "type": "uint",
            "minValue": 1,
            "maxValue": 3,
            "possibleValues": "any",
            "writable": true,
            "optional": true
        },
        {
            "name": "sessionEnergy",
            "type": "double",
            "logged": true,
            "unit": "KiloWattHour",
            "optional": true
        }
    ]
}
